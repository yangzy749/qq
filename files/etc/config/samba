
config samba
	option name 'OpenWrt'
	option workgroup 'WORKGROUP'
	option description 'OpenWrt'
	option homes '1'
	option autoshare '1'

config sambashare
	option auto '1'
	option name '/overlay'
	option path '/overlay'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda3'
	option browseable 'yes'

config sambashare
	option auto '1'
	option name '/opt'
	option path '/opt'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda4'
	option browseable 'yes'



config sambashare
	option auto '1'
	option name 'sda1'
	option path '/mnt/sda1'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda1'


config sambashare
	option auto '1'
	option name '/boot'
	option path '/boot'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sdb1'
